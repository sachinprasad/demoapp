<div class="col-lg-6">
  <%= form_tag home_path, method: 'get' do %>
    <div class="input-group" id="multiple-datasets">
      <%= text_field_tag :search, params[:search],class: "form-control typeahead" ,placeholder: "Names", autocomplete: "off" %>
      <span class="input-group-btn">
        <%= button_tag "Search", name: nil,class: "btn btn-primary ",type: "submit"%>
      </span>
    </div><!-- /input-group -->
  <% end %>
</div><!-- /.col-lg-6 -->
<div class="col-lg-12 ptop-20">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Registered On</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.first_name %> </td>
        <td><%= user.last_name %></td>
        <td><%= user.created_at.strftime('%m-%d-%Y %I:%M %p') %></td>
      </tr>
    <% end %>
    <% if @users.blank? %>
      <tr>
        <td colspan="4"> No data available </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
